@model LibroEscuelaBasicaMedia.Models.ViewModel.ProfesorViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@using (Html.BeginForm("Create", "Profesor", FormMethod.Post))
{
    <div class="row">
        <div class="form-group">
            @Html.LabelFor(d => d.correo)
            @Html.TextBoxFor(d => d.correo)
        </div>
        <div class="form-group">
            @Html.LabelFor(d => d.contraseña)
            @Html.TextBoxFor(d => d.contraseña)

        </div>
        <div class="form-group">
            <label>Curso</label>
            @Html.DropDownListFor(d => d.idRol, null)
        </div>
        <div class="form-group">
            @Html.LabelFor(d => d.rutProfesor)
            @Html.TextBoxFor(d => d.rutProfesor)

        </div>
        <div class="form-group">
            @Html.LabelFor(d => d.nombre)
            @Html.TextBoxFor(d => d.nombre)

        </div>
        <div class="form-group">
            @Html.LabelFor(d => d.apellidoPaterno)
            @Html.TextBoxFor(d => d.apellidoPaterno)

        </div>
        <div class="form-group">
            @Html.LabelFor(d => d.apellidoMaterno)
            @Html.TextBoxFor(d => d.apellidoMaterno)

        </div>
        <div class="form-group">
            @Html.LabelFor(d => d.idcurso)
            @Html.DropDownListFor(m => m.idcurso, null)
        </div>

        <div class="form-group">
            <input type="submit" />

        </div>
        <div class="form-group">


        </div>
    </div>

}